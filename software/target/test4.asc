10 CLS
20 INPUT "Command to send (12 chars): "; A$
40 A$ = LEFT$(A$ + SPACE$(12), 12)
30 OUT (&H5A), &HAA
50 SU% = 0
60 FOR I% = 1 TO 12:
70 C% = ASC(MID$(A$,I%,1))
80 SU% = SU% + C%
90 OUT (&H5A), ASC(MID$(A$,I%,1))
100 NEXT
110 CH% = ((SU% \ 256) + (SU% AND 255)) AND 255
120 PRINT "Checksum: "; CH%
130 OUT (&H5A), CH%
140 PRINT "Received: "; INP(&H5A)
150 GOTO 20
